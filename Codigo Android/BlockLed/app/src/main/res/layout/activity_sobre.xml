<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="@drawable/fundofinal"
    tools:context="com.example.bruno.feirasoftware.Sobre">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titulo"
        android:fontFamily="monospace"
        android:textColor="@color/colorBlack"
        android:textSize="40dp"
        android:paddingBottom="10dp"
        android:textAlignment="center"
        android:text="Sobre"/>


<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:id="@+id/text"
    android:textColor="@color/colorBlack"
    android:layout_below="@+id/titulo"
    android:textSize="17dp"
    android:fontFamily="monospace"
    android:paddingBottom="10dp"
    android:textAlignment="center"
android:text="O modulo Block-Light foi construído por alunos do curso de Engenharia de Computação do IFTM (Instituto Federal do Triangulo Mineiro) com a intenção de inserir crianças e adolescente no ambiente de programação, com o uso de blocos de programação o estudante não precisa ter conhecimento de uma linguagem específica, usando apenas de lógica e sua criatividade."/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text1"
        android:textStyle="italic"
        android:fontFamily="monospace"
        android:paddingBottom="16dp"

        android:textColor="@color/colorBlack"
        android:textSize="17dp"

        android:layout_below="@+id/text"
        android:text="Email: block-light@hotmail.com"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text2"
        android:fontFamily="monospace"
        android:textStyle="italic"

        android:textColor="@color/colorBlack"
        android:textSize="15dp"
        android:paddingBottom="25dp"
        android:layout_below="@+id/text1"
        android:text="Autores: André Oliveira, Bruno Gutierrez, Filipe Silva, João Oliveira, Kelwin Henrique e Sebastião Batista."/>

<Button
    android:background="@android:drawable/dialog_holo_light_frame"
    android:fontFamily="monospace"
    android:textStyle="bold"
    android:textSize="20dp"
android:id="@+id/Voltar"
android:layout_width="200dp"
android:layout_height="wrap_content"
android:layout_centerHorizontal="true"
android:text="Voltar"
android:textAllCaps="false"
android:layout_below="@+id/text2"
    android:onClick="voltar"


    />


</RelativeLayout>